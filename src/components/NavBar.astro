---
const links = [
  { href: "/", text: "Home" },
  { href: "/blog", text: "Articles" },
];
---

<nav class="sticky top-0 z-50 backdrop-blur-md bg-background/80">
  <div class="max-w-3xl mx-auto px-6">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand -->
      <a
        href="/"
        class="text-xl font-medium tracking-tight hover:opacity-80 transition-opacity duration-200"
      >
        BlogsWithM
      </a>

      <!-- Navigation Links -->
      <ul class="flex items-center space-x-8">
        {
          links.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm font-medium text-muted hover:text-foreground transition-colors duration-200"
              >
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
