---
import "../styles/global.css";
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  lang?: string;
  showHeader?: boolean;
}

const {
  title = "BlogsWithM",
  description = "Articles, notes, and thoughts.",
  image = "/favicon.svg",
  lang = "en",
  showHeader = false,
} = Astro.props as Props;

const currentUrl = Astro.url;
const canonicalUrl = currentUrl.href;
const absoluteImage = image?.startsWith("http")
  ? image
  : new URL(image, Astro.site).href;
const brandName = "Mohtasham Murshid Madani";
const websiteName = "BlogsWithM";
const pageTitle = title?.includes(brandName) ? title : `${title} | ${brandName}`;
const siteUrl = Astro.site?.href ?? "https://blog.mohtasham.dev/";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400;1,500&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={`${description} — ${brandName}`} />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={`${description} — ${brandName}`} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={absoluteImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={`${description} — ${brandName}`} />
    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'WebSite',
        name: websiteName,
        url: siteUrl,
        publisher: {
          '@type': 'Person',
          name: brandName,
        },
        inLanguage: lang,
      })}
    </script>
    <meta name="twitter:image" content={absoluteImage} />
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col">
    {
      showHeader && (
        <header class="max-w-3xl mx-auto px-6 py-6">
          <a href="/" class="text-xl font-semibold no-underline">
            Mohtasham Murshid Madani
          </a>
        </header>
      )
    }
    <main class="flex-1">
      <slot />
    </main>
    <footer
      class="max-w-3xl mx-auto px-6 py-12 text-sm text-muted-foreground text-center"
    >
      <p>© {new Date().getFullYear()} Mohtasham Murshid Madani</p>
    </footer>
  </body>
</html>
